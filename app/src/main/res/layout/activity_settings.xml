<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings ⚙️"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_user_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="School"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="15dp"/>

        <Button
            android:id="@+id/btn_save_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Focus Features"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="10dp"/>

        <Switch
            android:id="@+id/switch_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance Guardian (Blur Screen)"
            android:textSize="16sp"
            android:padding="10dp"/>

        <Switch
            android:id="@+id/switch_posture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posture Coach (Camera)"
            android:textSize="16sp"
            android:padding="10dp"/>

        <Switch
            android:id="@+id/switch_neck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Neck Stretch Reminder"
            android:textSize="16sp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

        <Switch
            android:id="@+id/switch_leaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join Public Leaderboard"
            android:textSize="16sp"
            android:padding="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDD"
            android:layout_marginVertical="30dp"/>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Log Out &amp; Clear Data"
            android:backgroundTint="#FF5252"/>

    </LinearLayout>
</ScrollView>