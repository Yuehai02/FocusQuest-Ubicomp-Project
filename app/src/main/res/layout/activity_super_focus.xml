<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/layout_mini_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E0F7FA"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:elevation="15dp">

        <TextView
            android:id="@+id/tv_mini_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25:00"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/tv_mini_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Monitoring..."
            android:textColor="#00796B"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/circular_progress"
            android:backgroundTint="#E0F2F1"
            android:padding="5dp"/>

        <Button
            android:id="@+id/btn_close_overlay"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Back"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/primary"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_main_focus_ui"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_mini_status_bar">

        <EditText
            android:id="@+id/et_task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:hint="What are you working on?"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:padding="10dp" />

        <LinearLayout
            android:id="@+id/layout_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/et_task_name"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_slider_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Duration: 25 mins"
                android:textColor="@color/primary"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="5"
                android:valueTo="120"
                android:value="25"
                android:stepSize="5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_lock_silent_mode_off"
                    app:tint="#757575"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sound: "
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"/>
                <Spinner
                    android:id="@+id/spinner_noise"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/timer_container"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_below="@id/layout_slider"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">
            <ProgressBar
                android:id="@+id/progress_timer"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progressDrawable="@drawable/circular_progress"
                android:max="100"
                android:progress="100"
                android:rotation="-90"/>
            <TextView
                android:id="@+id/tv_timer_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="25:00"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_neck_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Left"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_noise_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timer_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Environment: Quiet"
            android:textColor="@color/success"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/layout_tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_noise_status"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_open_tutor"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Tutor"
                android:textSize="11sp"
                android:backgroundTint="#2196F3"
                android:layout_marginEnd="5dp"/>

            <Button
                android:id="@+id/btn_open_psych"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Psych"
                android:textSize="11sp"
                android:backgroundTint="#E91E63"
                android:layout_marginEnd="5dp"/>

            <Button
                android:id="@+id/btn_open_notes"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Notes"
                android:textSize="11sp"
                android:backgroundTint="#FF9800"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/btn_neck_exercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Neck Exercise"
                android:backgroundTint="#FF9800"
                android:visibility="gone"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_start_focus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start Focus"
                    android:backgroundTint="@color/primary"/>
                <Button
                    android:id="@+id/btn_finish_early"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Stop"
                    android:backgroundTint="@color/secondary"
                    android:visibility="gone"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_above="@id/layout_controls"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">
            <androidx.camera.view.PreviewView
                android:id="@+id/preview_mini"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_posture_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Posture OK"
                android:textSize="10sp"
                android:gravity="center"
                android:background="#804CAF50"
                android:textColor="@color/white"
                android:layout_gravity="bottom"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_chat_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_mini_status_bar"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:visibility="gone"
        android:elevation="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_chat_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#EEEEEE"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_chat_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ask AI..."
                android:padding="10dp"/>
            <Button
                android:id="@+id/btn_chat_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_notes_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_mini_status_bar"
        android:orientation="vertical"
        android:background="#FFF8E1"
        android:visibility="gone"
        android:elevation="10dp"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lecture Summary History"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textColor="#FF6F00"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_notes_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading notes..."
                android:textSize="16sp"
                android:lineSpacingExtra="6dp"/>
        </ScrollView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_blur_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2FFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:elevation="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Too Close!"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please step back."
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>